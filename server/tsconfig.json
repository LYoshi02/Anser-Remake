{
  "compilerOptions": {                        
    "target": "es2017",                               
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,                   
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "exclude":[
    "./node_modules"
  ]
}